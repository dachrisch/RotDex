<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Main app theme -->
    <style name="Theme.RotDex" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/rotdex_background</item>
    </style>

    <!-- Splash screen theme (Android 12+) -->
    <style name="Theme.RotDex.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#1C1B1F</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.RotDex</item>
    </style>
</resources>
